#include <iostream>
using namespace std;
int main()
{
float gross_salary;
int work_hours;
float income_tax_rate;
float overtime;
float netpay;
cout<<"enter your gross salary:\n";
cin>>gross_salary;
cout<<"enter your income tax:\n";
cin>>income_tax_rate;
cout<<"enter your work hour:\n";
cin>>work_hours;
cout<<"enter your tax rate:\n";
cin>>income_tax_rate;
if(work_hours>40){
    cout<<"enter your overtime:\n";
    cin>>overtime;
    netpay=gross_salary-(gross_salary*(income_tax_rate/100 + 0.07))+((work_hours-40*overtime));
}else{
    netpay=gross_salary-(gross_salary*income_tax_rate/100)-(gross_salary*0.07);
}cout<<"net pay"<<netpay;
}
    

